let screen = document.getElementById("screen"); let buttons = document.querySelectorAll("button"); let screenValue = ''; console.log(screen); for (const index of buttons) { index.addEventListener("click",(e)=> { let buttontext=e.target.innerText; if (buttontext == "X")
 { buttontext = '*'; screen.value=screen.value+buttontext; } else if (buttontext == "=") { screen.value=eval(screen.value); } 

else if (buttontext=="correct"){screen.value=screen.value -1}
else if (buttontext=="CE"){screen.value="";}

else if (buttontext=="AC") { screen.value=""; } else { screen.value=screen.value+buttontext; } }); }
